<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReplyActivity">

    <ImageView
        android:id="@+id/ivPictureReply"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <EditText
        android:id="@+id/etCaptionReply"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/ivPictureReply"
        app:layout_constraintStart_toStartOf="@+id/ivPictureReply"
        app:layout_constraintTop_toBottomOf="@+id/ivPictureReply" />

    <Button
        android:id="@+id/btnReply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="reply"
        app:layout_constraintEnd_toEndOf="@+id/etCaptionReply"
        app:layout_constraintStart_toStartOf="@+id/etCaptionReply"
        app:layout_constraintTop_toBottomOf="@+id/etCaptionReply" />
</androidx.constraintlayout.widget.ConstraintLayout>