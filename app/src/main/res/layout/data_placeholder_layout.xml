<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/placeholderLocation"
        android:layout_width="200dp"
        android:layout_height="22sp"
        android:background="@color/shimmer_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp" />

    <View
        android:id="@+id/placeholderDuration"
        android:layout_width="50dp"
        android:layout_height="@dimen/placeholderMoreInfo"
        android:background="@color/shimmer_background"
        app:layout_constraintTop_toTopOf="@id/placeholderLocation"
        app:layout_constraintBottom_toBottomOf="@id/placeholderLocation"
        app:layout_constraintStart_toEndOf="@id/placeholderLocation"
        android:layout_marginStart="20dp" />

    <View
        android:id="@+id/placeholderMoreData"
        android:layout_width="50dp"
        android:layout_height="@dimen/placeholderMoreInfo"
        android:background="@color/shimmer_background"
        app:layout_constraintTop_toBottomOf="@id/placeholderLocation"
        app:layout_constraintStart_toStartOf="@id/placeholderLocation" />

    <View
        android:id="@+id/placeholderName"
        android:layout_width="100dp"
        android:layout_height="@dimen/placeholderMoreInfo"
        android:background="@color/shimmer_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="44dp" />

    <View
        android:id="@+id/placeholderCaption"
        android:layout_width="300dp"
        android:layout_height="@dimen/placeholderMoreInfo"
        android:background="@color/shimmer_background"
        app:layout_constraintTop_toBottomOf="@id/placeholderName"
        app:layout_constraintStart_toStartOf="@id/placeholderName"
        android:layout_marginTop="4dp" />


</androidx.constraintlayout.widget.ConstraintLayout>