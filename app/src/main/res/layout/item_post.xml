<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvEventFeed"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvLocationFeed"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/tvEventFeed"
        app:layout_constraintStart_toStartOf="@+id/tvEventFeed"
        app:layout_constraintTop_toBottomOf="@+id/tvEventFeed" />

    <ImageView
        android:id="@+id/ivPictureFeed"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/tvLocationFeed"
        app:layout_constraintStart_toStartOf="@+id/tvLocationFeed"
        app:layout_constraintTop_toBottomOf="@+id/tvLocationFeed"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvCaptionFeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/ivPictureFeed"
        app:layout_constraintStart_toStartOf="@+id/ivPictureFeed"
        app:layout_constraintTop_toBottomOf="@+id/ivPictureFeed" />
</androidx.constraintlayout.widget.ConstraintLayout>